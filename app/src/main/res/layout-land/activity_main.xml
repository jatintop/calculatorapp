<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black_shade_3">

        <TextView
            android:id="@+id/idTVSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_shade_3"
            android:gravity="bottom|end"
            android:maxLines="1"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/idTVprimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_shade_3"
            android:gravity="bottom|end"
            android:maxLines="1"
            android:padding="10dp"
            android:text=""
            android:textColor="#fff"
            android:textSize="50sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blac_shade_1"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blac_shade_1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bac"
                        style="@style/CalculatorButton"
                        android:text="AC"
                        android:textColor="@color/yellow" />

                    <Button
                        android:id="@+id/bc"
                        style="@style/CalculatorButton"
                        android:text="C"
                        android:textColor="@color/yellow" />

                    <Button
                        android:id="@+id/bbrac1"
                        style="@style/CalculatorButton"
                        android:text="("
                        android:textColor="#ffa500" />

                    <Button
                        android:id="@+id/bbrac2"
                        style="@style/CalculatorButton"
                        android:text=")"
                        android:textColor="#ffa500" />

                    <Button
                        android:id="@+id/bdiv"
                        style="@style/CalculatorButton"
                        android:text="÷"
                        android:textColor="#ffa500" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b7"
                        style="@style/CalculatorButton"
                        android:text="7" />

                    <Button
                        android:id="@+id/b8"
                        style="@style/CalculatorButton"
                        android:text="8" />

                    <Button
                        android:id="@+id/b9"
                        style="@style/CalculatorButton"
                        android:text="9" />

                    <Button
                        android:id="@+id/bmul"
                        style="@style/CalculatorButton"
                        android:text="×"
                        android:textColor="#ffa500" />

                    <Button
                        android:id="@+id/bsin"
                        style="@style/CalculatorButton"
                        android:text="sin"
                        android:textAllCaps="false"
                        android:textColor="#ffa500" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b4"
                        style="@style/CalculatorButton"
                        android:text="4" />

                    <Button
                        android:id="@+id/b5"
                        style="@style/CalculatorButton"
                        android:text="5" />

                    <Button
                        android:id="@+id/b6"
                        style="@style/CalculatorButton"
                        android:text="6" />

                    <Button
                        android:id="@+id/bminus"
                        style="@style/CalculatorButton"
                        android:text="-"
                        android:textColor="#ffa500" />

                    <Button
                        android:id="@+id/bcos"
                        style="@style/CalculatorButton"
                        android:text="cos"
                        android:textAllCaps="false"
                        android:textColor="#ffa500" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b1"
                        style="@style/CalculatorButton"
                        android:text="1" />

                    <Button
                        android:id="@+id/b2"
                        style="@style/CalculatorButton"
                        android:text="2" />

                    <Button
                        android:id="@+id/b3"
                        style="@style/CalculatorButton"
                        android:text="3" />

                    <Button
                        android:id="@+id/bplus"
                        style="@style/CalculatorButton"
                        android:text="+"
                        android:textColor="#ffa500" />

                    <Button
                        android:id="@+id/btan"
                        style="@style/CalculatorButton"
                        android:text="tan"
                        android:textAllCaps="false"
                        android:textColor="#ffa500" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bpi"
                        style="@style/CalculatorButton"
                        android:text="π" />

                    <Button
                        android:id="@+id/b0"
                        style="@style/CalculatorButton"
                        android:text="0" />

                    <Button
                        android:id="@+id/bdot"
                        style="@style/CalculatorButton"
                        android:text="." />

                    <Button
                        android:id="@+id/bequal"
                        style="@style/CalculatorButton"
                        android:text="="
                        android:textColor="#ffa500" />

                    <Button
                        android:id="@+id/blog"
                        style="@style/CalculatorButton"
                        android:text="log"
                        android:textAllCaps="false"
                        android:textColor="#ffa500" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bsquare"
                        style="@style/CalculatorButton"
                        android:text="x²"
                        android:textAllCaps="false"
                        android:textColor="#ffa500" />

                    <Button
                        android:id="@+id/bsqrt"
                        style="@style/CalculatorButton"
                        android:text="√"
                        android:textColor="#ffa500" />

                    <Button
                        android:id="@+id/binv"
                        style="@style/CalculatorButton"
                        android:text="1/x"
                        android:textAllCaps="false"
                        android:textColor="#ffa500" />

                    <Button
                        android:id="@+id/bfact"
                        style="@style/CalculatorButton"
                        android:text="x!"
                        android:textAllCaps="false"
                        android:textColor="#ffa500" />

                    <Button
                        android:id="@+id/bln"
                        style="@style/CalculatorButton"
                        android:text="ln"
                        android:textAllCaps="false"
                        android:textColor="#ffa500" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>